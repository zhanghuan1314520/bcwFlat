/* pages/home/index.wxss */
.containers {
  width: 100%;
  height: 100%;
  background: -webkit-linear-gradient(top, #804CF7, #804CF7, #DEE0FE);
}
.header {
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
  padding: 30rpx 28rpx;
  background-color:#804cf7;
  position: fixed;
  top: 0;
  left: 0;
  z-index:99999;
}
.header_right {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}

.header_right_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.header_left{
  margin: -20rpx 0 0 20rpx;
}

.header_box {
  margin: 10rpx 28rpx 10rpx 80rpx;
  padding: 15rpx;
  font-size: 25rpx;
  border-radius: 20rpx;
  background-color: #fff;
  display: inline-block !important;
  display: inline;
  position: absolute;
  top: 111rpx;
  z-index: 88888;
}

.share {
  display: flex;
  flex-direction: column;
}

.nav {
  display: flex;
  align-items: center;
}

.nav_img {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}



.header1 {
  margin: 114rpx 28rpx 0 28rpx;
  overflow: hidden;
  position: relative;
}

swiper {
  height: 300rpx;
}

.imgs {
  width: 100%;
  height: 100%;
}
.img_selected{
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx 0;
}

.case-page{
  margin: 40rpx 28rpx 0 28rpx;
}
.list-masonry{
  column-count: 2;
}
.item-masonry{
  width: 336rpx;
  height: 200rpx;
  background-color: #fff;
  break-inside: avoid;/*避免在元素内部插入分页符*/
  box-sizing: border-box; 
  padding: 20rpx 10rpx;
  margin-bottom:40rpx;
  display: flex;
}
.item-masonry-img{
  margin: 30rpx 0;
}
.item-masonry-img image {
  width: 100rpx;
  height: 100rpx;
}
.item-masonry-view{
  margin-left: 10rpx;
  text-align: center;
}
.item-masonry-view-title{
  padding: 28rpx 0;
  color: #1F1F1F;
  font-weight: bold;
  font-size: 32rpx;
  letter-spacing:4px;
}
.item-masonry-view-tip{
  color: #666666;
  font-weight: bold;
  font-size: 18rpx;
  letter-spacing:1px;
}


.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{

  margin-bottom: 2rpx;

}

.swiper-box .wx-swiper-dot{

  width:40rpx;

  display: inline-flex;

  height: 10rpx;

  margin-left: 20rpx;

  justify-content:space-between;

}

.swiper-box .wx-swiper-dot::before{

  content: '';

  flex-grow: 1; 

  background: rgba(255,255,255,0.8);

  border-radius: 8rpx

}

.swiper-box .wx-swiper-dot-active::before{

  background:rgba(244,0,0,0.8);   

}
