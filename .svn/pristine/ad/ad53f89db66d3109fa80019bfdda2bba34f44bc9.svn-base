// pages/inspect/index.js
import { request } from "../../request/index.js";
Page({

  /**
   * 页面的初始数据
   */
  data: {
    imglist:["https://pswanmor.edu505.com/api/screen/591f5fc9ac5b4cd89d03206cff5646a5.jpg"]
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    wx.showLoading({
      title: '加载中',
    })
    setTimeout(function () {
      wx.hideLoading()
    }, 2000)
//修改截屏开启状态
    wx.request({
      url: '/deviceConfig/updateScreenStatus',
      method:"POST",
      data:{
        mac:"88:BF:E4:48:57:8F",
        screenStatus:0
      },
      success:(res)=>{
        console.log("修改截屏开启状态",res.data)
      }
    })
   //根据mac查询截屏
    request({ url: "/deviceScreen/queryByMac?mac=88:BF:E4:48:57:8F" })
      .then(result => {
        console.log("根据mac查询截屏",result.data);
      })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
 
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },
  /**   
     * 预览图片  
     */
    previewImage: function (e) {
      console.log(e);
      var current = e.target.dataset.src;
      wx.previewImage({
        current: current, // 当前显示图片的http链接  
        urls: this.data.imglist // 需要预览的图片http链接列表  
      })
    } ,   
})