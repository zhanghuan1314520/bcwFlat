<view class="container">
  <view class="content radius" wx:for="{{childrens}}"  wx:for-index="children" wx:key="id">
      <view class="item">
        <view class="item_right1">
          <image class="img2" src="../../../images/img2.jpg" mode="" />
        </view>
        <view class="item_left1">
          绑定的孩子
        </view>
      </view>
      <view class="item">
        <view class="item_right">姓名</view>
        <view class="item_left">
          <input class="weui-input" name="username" placeholder="请输入姓名" />
        </view>
      </view>
      <view class="item">
        <view class="item_right">性别</view>
        <view class="item_left">
          <view>
            <picker name="areaPicker" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
              <view class="picker">{{array[index]}}</view>
            </picker>
          </view>
        </view>
        <view class="time_two">
          <image class="jt_img" src="../../../images/jt_left.png" />
        </view>
      </view>
      <view class="item">
        <view class="item_right">学号</view>
        <view class="item_left">
          <!-- <input class="weui-input" name="studentCode" placeholder="请输入学号" /> -->
          {{item.studentName}}
        </view>
      </view>
      <view class="item">
        <view class="item_right">MAC</view>
        <view class="item_left">
          <!-- <input class="weui-input" auto-focus placeholder="20:72:0D：39:01:3E" /> -->
          {{item.mac}}
        </view>
      </view>
      <view class="item" bindtap="relieve">
        <view class="item_right">解除绑定</view>
        <view class="item_left">
          <view class="time_two">
            <image class="jt_img" src="../../../images/jt_left.png" />
          </view>
        </view>
      </view>
  </view>
  <view class="btn">
    <button class="buttons" style="width:516rpx;" bindtap="submit">提交</button>
  </view>
</view>