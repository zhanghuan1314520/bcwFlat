/* 搜索框 */
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: flex;
  box-sizing: border-box;
  background-color: #804CF7;

}

.weui-icon-search {
  margin-right: 10rpx;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9B9B9B;
  background: #FFFFFF;
  line-height: 25px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #fff;
  white-space: nowrap;
  font-size: 30rpx;
}

/*  */
.card {
  background-color: #fff;
  border-radius: 10rpx;
}

.img {
  width: 85rpx;
  height: 85rpx;
}

.list-table-view {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 28rpx 28rpx 0 28rpx;
}

.list-col-3 {
  width: 334rpx;
  height: 212rpx;
  background-color: #fff;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.list_left {
  display: flex;
  height: 85rpx;
  margin: 28rpx 0 0 10rpx;
}
.list_left_one{
  border-radius: 20rpx;
  overflow: hidden;
}
.list_left_two {
  margin-left: 10rpx;
}

.title {
  font-size: 25rpx;
  color: #1F1F1F;
  font-weight: bold;
}

.tip {
  display: flex;
  font-size: 20rpx;
  margin-top: 20rpx;
}

.list_right {
  margin: 22rpx 70rpx 0 70rpx;
}

.btn {
  width: 194rpx;
  height: 45rpx;
  line-height: 45rpx;
  border: 1px solid #0A98E3;
  color: #0A98E3;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 17rpx;
}


.tab {
  height: 68rpx;
  background-color: #fff;
}

.tab-left {
  display: flex;
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
}

.tab-left view {
  flex: 1;
  font-size:30rpx;
  font-weight: bold;
  color: #999999;
 
}
.tab-left .active {
  color: #804CF7;
  border-bottom: 2px solid #804CF7;
}

.tab-right .right-item {
  display: none;
}
.tab-right .right-item.active {
  display: block;
  margin-top: 40rpx;
}
