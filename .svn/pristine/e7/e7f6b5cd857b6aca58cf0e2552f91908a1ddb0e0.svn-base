// pages/author/device_information/index.js
var app = getApp();
Page({
  /**
   * 页面的初始数据
   */
  data: {
    array: ['女', '男'],
    index: 0,
    childrens: [],
    studentName: "",
    gender: "",
    studentCode: ""
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this;
    var code = app.globalData.code
    console.log("这是传过来手机号------>", code)

    wx.getStorage({
      key: 'studentName',
      success: function (res) {
        console.log("姓名------>",res.data)
        that.setData({ studentName: res.data })
      },
    })
    wx.getStorage({
      key: 'gender',
      success: function (res) {
        console.log("性别----->",res.data)
        that.setData({ gender: res.data })
      },
    })

    wx.getStorage({
      key: 'studentCode',
      success: function (res) {
        console.log("学号------>",res.data)
        that.setData({ studentCode: res.data })
      },
    })
    wx.request({
      url: 'https://pswanmor.edu505.com/api/device/queryChildList?phone=' + code,
      // url: 'https://pswanmor.edu505.com/api/device/queryChildList?phone=18267726725',
      success: res => {
        console.log(res.data.data[0].mac);
        app.globalData.mac = res.data.data[0].mac
        console.log("我的孩子页面查询孩子列表", res.data)
        this.setData({
          childrens: res.data.data
        })
      }
    })
  },
   //性别选择
   bindPickerChange: function (e) {
    console.log('当前选择的值为:', e.detail.value)
    this.setData({
      index: e.detail.value
    })
  },

  submit: function (e) {
    console.log(e.detail.value);
    //表单数据
    var objData = e.detail.value;
    if (objData.studentName && objData.gender && objData.studentCode) {
      //异步方式储存表单数据
      wx.setStorage({
        key: 'studentName',
        data: objData.studentName,
      })
      wx.setStorage({
        key: 'gender',
        data: objData.gender,
      })
      wx.setStorage({
        key: 'studentCode',
        data: objData.studentCode,
      })
    }
    //修改设备信息 
    wx.request({
      url: 'https://pswanmor.edu505.com/api/device/updateDeviceInfo?gender=1&mac=20:75:55:39:01:42&studentCode=48168&name=abc',
      method:"POST",
      success:function(res){
        console.log("修改设备信息",res);
        // this.setData({
        //   childrens:res.data
        // })
      }
    })
    wx.showToast({
      title: '修改成功',
      icon: "none",
      duration: 2000,
      success() {
        setTimeout(() => {
         wx.navigateBack({
           delta: 1,
         })
        }, 2000)
      }
    })
  },

  relieve: function () {
    wx.showModal({
      title: '温馨提示',
      content: '解除绑定后：学习平板自动删除不错家长管控系统所有操作，请慎重操作！',
      success(res) {
        if (res.confirm) {
          console.log('用户点击确定')
          wx.showToast({
            title: '解绑成功',
            icon: "none",
            duration: 2000,
            mask: true
          })
        } else if (res.cancel) {
          console.log('用户点击取消')
        }
      }
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})