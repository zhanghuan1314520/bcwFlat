// pages/application/index.js
import { request } from "../../request/index.js";
Page({

  /**
   * 页面的初始数据
   */
  data: {
    learn: [],  //查询类别下拉列表内容部分
    selected: 0,   //tab是否选中
    list: [], // 查询类别下拉列表
    categoryId: "",
    pushStatus: 0,
    appName: ""
    // searchValue: ''
  },


  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this;
    // var searchValue = '';
    this.getlearn();
    wx.request({
      url: 'https://pswanmor.edu505.com/api/appCategory/select',
      success: function (res) {
        // console.log("查询类别下拉列表", res.data.data)
        //循环使用s
        that.list = res.data.data
        console.log("this.list:", that.list)
        for (var i = 0; i < res.data.data.length; i++) {
          that.data.list[i] = res.data.data[i].label
        }
        that.data.list.splice(1, 1);
        that.setData({
          list: that.data.list
        })
      }
    })
  },


  getlearn() {
    let oper_mac = wx.getStorageSync('oper_mac')
    console.log("mac地址oper_mac：=============", oper_mac);
    request({ url: "/appDevice/queryMyAppDevice", data: { appName: this.appName, categoryId: this.categoryId, mac: oper_mac, pushStatus: this.data.pushStatus, searchType: 1 }, method: "POST" })
      .then(result => {
        // console.log("result-->", result.data)
        wx.setStorage({
          key: 'learn',
          data: result.data,
        })
        this.setData({
          learn: result.data
        })
      })
  },
  //从平板卸载或者推送至平板部分逻辑开始
  push: function (e) {
    let that = this;
    let id = e.currentTarget.dataset.id;
    let appName = e.currentTarget.dataset.name;
    let oper_mac = wx.getStorageSync('oper_mac')
    wx.showModal({
      title: '温馨提示',
      content: '确定推送' + e.target.dataset.name + '至平板吗？',
      showCancel: true,
      cancelText: "取消",
      cancelColor: "#030303",
      confirmText: "确定",
      confirmColor: "#804CF7",
      success: function (res) {
        if (res.confirm) {
          wx.request({
            // 推送api
            url: 'https://pswanmor.edu505.com/api/appDevice/push',
            data: {
              appId: e.currentTarget.dataset.id, mac: oper_mac
            },
            method: 'POST',
            success: function (res) {
              that.onLoad();
              wx.showToast({
                title: '删除成功',
                icon: "none"
              })
            }
          })
          //重新查询接口
          wx.request({
            url: 'url: "/appDevice/queryMyAppDevice", data: { appName: this.appName, categoryId: this.categoryId, mac: oper_mac, pushStatus: this.data.pushStatus, searchType: 1 }',
            success: (res) => {
              for (var i = 0; i < res.data.data.length; i++) {
                var item = 'list[' + i + ']'
                that.setData({
                  [item]: res.data.data
                })
              }
            }
          })
        } else if (res.cancel) {
        }
      }
    })
  },

  uninstall: function (e) {
    let that = this;
    let id = e.currentTarget.dataset.id;
    let appName = e.currentTarget.dataset.name;
    let oper_mac = wx.getStorageSync('oper_mac')
    wx.showModal({
      title: '温馨提示',
      content: '确定把' + e.target.dataset.name + '从平板卸载吗？',
      showCancel: true,
      cancelText: "取消",
      cancelColor: "#030303",
      confirmText: "确定",
      confirmColor: "#804CF7",
      success: function (res) {
        if (res.confirm) {
          wx.request({
            // 推送api
            url: 'https://pswanmor.edu505.com/api/appDevice/uninstall',
            data: {
              appId: e.currentTarget.dataset.id, mac: oper_mac
            },
            method: 'POST',
            success: function (res) {
              that.onLoad();
              wx.showToast({
                title: '删除成功',
                icon: "none",
                mask: true
              })
            }
          })
          //重新查询接口
          wx.request({
            url: 'url: "/appDevice/queryMyAppDevice", data: { appName: this.appName, categoryId: this.categoryId, mac: oper_mac, pushStatus: this.data.pushStatus, searchType: 1 }',
            success: (res) => {
              for (var i = 0; i < res.data.data.length; i++) {
                var item = 'list[' + i + ']'
                that.setData({
                  [item]: res.data.data
                })
              }
            }
          })
        } else if (res.cancel) {
        }
      }
    })
    that.getlearn();
  },


  //从平板卸载或者推送至平板部分逻辑结束

  //搜索方法 key为用户输入的查询字段
  search: function (key) {
    /*console.log('搜索函数触发')*/
    var that = this;
    var learn = wx.getStorage({
      key: 'learn',
      success: function (res) {//从storage中取出存储的数据*/
        /*console.log(res)*/
        if (key == '') {//用户没有输入 全部显示
          that.setData({
            learn: res.data
          })
          return;
        }
        var arr = [];//临时数组 用于存放匹配到的数据
        for (let i in res.data) {
          if (res.data[i].appName.indexOf(key) >= 0) {//查找
            arr.push(res.data[i])
          }
        }
        if (arr.length == 0) {
          that.setData({
            learn: []
          })
        } else {
          that.setData({
            learn: arr//在页面显示找到的数据
          })
        }
      }
    })
  },
  //搜素时触发，调用search: function (key)，传入输入的e.detail.value值
  wxSearchInput: function (e) {
    this.search(e.detail.value);
  },
  //事件处理函数
  wxSearchInput: function (e) {
    this.search(e.detail.value);
    console.log(e.detail.value)
  },
  wxSerchFocus: function (e) {
    this.search(e.detail.value);
  },
  wxSearchBlur: function (e) {
    this.search(e.detail.value);
  },
  wxSearchFn: function (e) {
    /*console.log(e)*/
  },
  // 搜索框结束
  //tab框开始
  selected: function (e) {
    console.log("tab的值为:", e.currentTarget.dataset)
    let that = this
    let index = e.currentTarget.dataset.index
    console.log("选中内容的下标值为:", e.currentTarget.dataset.index)
    if (index == 0) {
      that.setData({
        selected: 0
      })
    } else if (index == 1) {
      that.setData({
        selected: 1
      })
      index = index + 1
    } else if (index == 2) {
      that.setData({
        selected: 2
      })
      index = index + 1
    } else if (index == 3) {
      that.setData({
        selected: 3
      })
      index = index + 1
    }

    that.categoryId = index;
    console.log("that.categoryId====", that.categoryId);
    that.getlearn();
  },
  //tab框结束
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },
})