/* 内容部分开始 */
.container {
  background: -webkit-linear-gradient(top,#804CF7,#DEE0FE,#DEE0FE);
  width: 100%;
  height: 100%;
  padding-top: 50rpx;
}
.content {
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 28rpx;
}
.reg {
  padding: 10rpx 0;
}
.img {
  width: 30rpx;
  height: 30rpx;
}
.content_form {
  display: flex;
  padding:40rpx;
  border-bottom: 1px solid #dcdcdc;
}
.content_form:last-child {
  border: none
}

.content_form_one {
  padding-top: 10rpx;
}

.content_form_two {
  flex: 10;
  font-size: 30rpx;
  margin-left: 20rpx;
  align-self: center;
  padding-right: 50rpx;
  font-weight: bold;
}

.content_form_one1 {
  padding-top: 15rpx;
}

.content_form_two1 {
  display: flex;
  flex: 10;
  font-size: 30rpx;
  margin-left: 20rpx;
  align-self: center;
  font-weight: bold;
}

/* 内容部分结束*/

/* 验证码按钮 */
.button1 {
  width: 200rpx;
  font-size: 28rpx;
  background: #804CF7;
  color: #FFFFFF;
}

.content_form_two_left {
  flex: 1;
}

.content_form_two_right {
  flex: 3;
  padding-right: 60rpx;
  margin-top: 10rpx;
  letter-spacing:5rpx;
}
/* 确认修改按钮 */
.btn {
  margin: 0 117rpx;
  height: 80rpx;
  line-height: 80rpx;
 padding-top: 220rpx;
 font-size: 32rpx;
}
.btn >button{
background-color: #804CF7;
font-weight: bold;
color: #fff;
font-size: 36rpx;
border-radius: 38rpx;
}