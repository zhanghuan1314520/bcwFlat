page {
  width: 100%;
  height: 100%;
}

/* 背景容器 */
.containers {
  background: url('https://i.loli.net/2020/09/24/5IVp6nxDAdJqOSN.png');
  background-size: 100% 100%;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
}

/* 内容部分开始 */
.content {
  width: 600rpx;
  background: -webkit-linear-gradient(top, #7439FD, #8C5EF5, #C291FF);
  opacity: 0.9;
  position: fixed;
  margin: 145rpx 75rpx 76rpx 75rpx;
}

.content_image {
  margin: 40rpx 220rpx 20rpx 220rpx;
}

/* 标题部分 */
.content_title {
  text-align: center;
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
}

/*sign */
.content_img {
  width: 162rpx;
  height: 162rpx;
  border-radius: 20rpx;
}

/* 登录注册切换部分 */
.top {
  width: 368rpx;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  background-color: #fff;
  margin: 45rpx 116rpx 40rpx 116rpx;
  border-radius: 36rpx;
  font-size: 40rpx;
  color: #BB87FE;
  /* font-weight: bold; */
}

/* 登录/注册切换按钮部分 */
.tab {
  width: 184rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  text-align: center;
  align-self: center;
}

/* 登录/注册切换按钮选中部分 */
.top .active {
  color: #fff;
  background-color: #B54EF0;
}

/* 登录注册统一部分 */
.content_form {
  display: flex;
  width: 516rpx;
  height: 80rpx;
  border-radius: 38rpx;
  border: 1px solid #fff;
  margin: 0 42rpx 20rpx 42rpx;
  background-color: #C291FF;
  font-size: 32rpx;
  font-weight: 400;
  color: #D27FF4;
}

/* 图标尺寸 */
.img {
  width: 25rpx;
  height: 30rpx;
}

/* 图标部分设置左边部分 */
.content_form_one {
  flex: 1;
  padding: 20rpx 0;
  margin-left: 35rpx;
}

/* 输入框部分 */
.content_form_two {
  flex: 10;
  padding: 16rpx 0;
  display: flex;
  color: #333;
}

/* 内容部分结束*/

.content_form_two1 {
  flex: 10;
  display: flex;
  font-size: 32rpx;
}

/* 验证码部分开始 */
.content_form_two_right {
  flex: 2;
  padding-top: 15rpx;
  color: #333;
}

.content_form_two_left {
  flex: 2;
  text-align: center;
  align-self: center;
  font-size: 25rpx;
  margin-left: 10rpx;
}

.button1 {
  width: 190rpx;
  height: 72rpx;
  font-size: 28rpx;
  background: #C291FF;
  color: #FFFFFF;
  border: 1px solid #C291FF;
}

.content_form_one1 {
  flex: 1;
  padding-top: 18rpx;
  margin-left: 35rpx;
}

/* footer部分开始 */
.footer {
  display: flex;
  height: 75rpx;
  font-size: 24rpx;
  margin: 20rpx 42rpx;
  color: #fff;
}

.footer_right {
  display: flex;
  flex: 3;
  align-self: center;
}

.footer_left {
  flex: 1;
  align-self: center;
}
.t {
  flex: 1;
  display: flex;
}
.tongyi {
  flex: 8;
}
.tongyi_t{
