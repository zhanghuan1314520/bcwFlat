/* 搜索框 */
.search{
  padding: 10rpx 28rpx;
  background-color: #804cf7;
}
.search input{
  width: 486rpx;
  border:1px solid #fff;
  border-radius: 6px;
  height: 30px;
  display: inline-block;
 padding: 0 20rpx;
 color: #000;
 font-size: 24rpx;
 text-align: center;
}
.btn1{
  height: 32px;
  margin-left: 10px;
  background-color: #804cf7;
  border: 1px solid #fff;
  color: #fff;
}
.lists{
  text-align: center;
  margin-top: 20px;
  color: rgb(230, 124, 25);
}
/*  */
.card {
  background-color: #fff;
  border-radius: 10rpx;
}

.img {
  width: 85rpx;
  height: 85rpx;
}

.list-table-view {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 28rpx 28rpx 0 28rpx;
}

.list-col-3 {
  width: 334rpx;
  height: 212rpx;
  background-color: #fff;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.list_left {
  display: flex;
  height: 85rpx;
  margin: 28rpx 0 0 10rpx;
}
.list_left_one{
  border-radius: 20rpx;
  overflow: hidden;
}
.list_left_two {
  margin-left: 10rpx;
}

.title {
  font-size: 25rpx;
  color: #1F1F1F;
  font-weight: bold;
}

.tip {
  display: flex;
  font-size: 20rpx;
  margin-top: 20rpx;
}

.list_right {
  margin: 22rpx 70rpx 0 70rpx;
}

.btn {
  width: 194rpx;
  height: 45rpx;
  line-height: 45rpx;
  border: 1px solid #0A98E3;
  color: #0A98E3;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 17rpx;
}


.tab {
  height: 68rpx;
  background-color: #fff;
}

.tab-left {
  display: flex;
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
}

.tab-left view {
  flex: 1;
  font-size:30rpx;
  font-weight: bold;
  color: #999999;
 
}
.tab-left .active {
  color: #804CF7;
  border-bottom: 2px solid #804CF7;
}

.tab-right .right-item {
  display: none;
}
.tab-right .right-item.active {
  display: block;
  /* margin-top: 40rpx; */
}
