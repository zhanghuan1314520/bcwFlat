// pages/time/index.js
Page({

  /**
   * 页面的初始数据
   */
  data: {
    checked: false,//开关
    checked1: false,
    //时长选择
    array:['30分钟', '60分钟', '90分钟', '120分钟', '150分钟', '180分钟', '210分钟', '240分钟'],
    index: 0,
    //时间段选择
    arrayIndex: 0,
    time: '12:00-14:00'
  },
  //开关
  onChange({ detail }) {
    var that = this;
    this.setData({ checked: detail });
    setTimeout(() => {
      wx.showToast({
        title:"操作成功",
        icon:"none",
        duration: 2000,
        success: function () {
        },
        fail: function () { },
      })
    }, 1000)
  },

   //开关
   onChange1({ detail }) {
    var that = this;
    this.setData({ checked1: detail });
    setTimeout(() => {
      wx.showToast({
        title:"操作成功",
        icon:"none",
        duration: 2000,
        success: function () {
        },
        fail: function () { },
      })
    }, 1000)
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },
  //时长选择
  bindPickerChange: function(e) {
    console.log('picker发送选择改变，携带值为', e.detail.value)
    this.setData({
      index: e.detail.value
    })
  },
  //时间段选择
  bindTimeChange: function (e) {
    this.setData({
      time: e.detail.value
    })
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})