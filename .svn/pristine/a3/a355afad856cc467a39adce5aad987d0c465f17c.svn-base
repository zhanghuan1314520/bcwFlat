import { request } from "../../request/index.js";

/* 
1 输入框绑定 值改变事件 input事件
  1 获取到输入框的值
  2 合法性判断 
  3 检验通过 把输入框的值 发送到后台
  4 返回的数据打印到页面上
2 防抖 （防止抖动） 定时器  节流 
  0 防抖 一般 输入框中 防止重复输入 重复发送请求
  1 节流 一般是用在页面下拉和上拉 
  1 定义全局的定时器id
 */


Page({

  /**
   * 页面的初始数据
   */
  data: {
    // 输入框的值
    inpValue: "",
    value: "",
    // 学习推荐
    lists: [],
    Utilities: [],
    entertainment: [],
    other: [],
    //状态
    // date:[ 状态(0:全部,1:已推送,2:已安装,3:待卸载(卸载中),4:已卸载) ,]
    tabArr: {
      curHdIndex: 0,
      curBdIndex: 0
    },
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    console.log(options);
    this.getlists();  //进入页面就要显示已经请求完了的数据
    this.getUtilities();
    this.getentertainment();
    this.getother();
  },


  getlists() {
    request({ url: "/appDevice/queryMyAppDevice", data: { appName: 1, categoryId: 1, mac: "88:BF:E4:48:57:8F", pushStatus: 0, searchType: 2 }, method: "post" })
      .then(result => {
        console.log("列表详情数据1", result.data);
        this.setData({
          lists: result.data
        })
      })
  },
  getUtilities() {
    request({ url: "/appDevice/queryMyAppDevice", data: { appName: 2, categoryId: 2, mac: "88:BF:E4:48:57:8F", pushStatus: 0, searchType: 1 }, method: "post" })
      .then(result => {
        console.log("列表详情数据2", result);
        this.setData({
          Utilities: result.data
        })
      })
  },
  getentertainment() {
    request({ url: "/appDevice/queryMyAppDevice", data: { appName: 3, categoryId: 3, mac: "88:BF:E4:48:57:8F", pushStatus: 0, searchType: 1 }, method: "post" })
      .then(result => {
        console.log("列表详情数据3", result);
        this.setData({
          entertainment: result.data
        })
      })
  },
  getother() {
    request({ url: "/appDevice/queryMyAppDevice", data: { appName: 4, categoryId: 4, mac: "88:BF:E4:48:57:8F", pushStatus: 0, searchType: 1 }, method: "post" })
      .then(result => {
        console.log("列表详情数据4", result.data);
        this.setData({
          other: result.data
        })
      })
  },
  uninstall: function () {
    wx.showModal({
      title: '温馨提示',
      content: '确定把学霸一对一从平板卸载吗？',
      success(res) {
        if (res.confirm) {
          // 推送应用
          wx.request({
            url: 'https://pswanmor.edu505.com/api/appDevice/push',
            data: {
              appId: 178, mac: "88:BF:E4:48:57:8F"
            },
            method: 'POST',
            success: function (res) {
              console.log("卸载的内容",res);
            }
          })
          wx.showToast({
            title: '卸载成功',
            icon: "none",
            duration: 2000,
            mask: true,
          })
        } else if (res.cancel) {
          console.log('用户点击取消')
        }
      }
    })
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },

  // 搜索框开始
  hideInput: function () {
    this.setData({
      inputVal: "",
      inputShowed: false
    });
    // getList(this);
  },
  showInput: function () {
    this.setData({
      inputShowed: true
    });
  },
  clearInput: function () {
    this.setData({
      inputVal: ""
    });
    // getList(this);
  },
  inputTyping: function (e) {
    this.setData({
      inputVal: e.detail.value
    });
  },
  TimeId: -1,
  // 输入框的值改变 就会触发的事件
  handleInput(e) {
    // 1 获取输入框的值
    console.log(e);
    const { value } = e.detail;
    // 2 检测合法性
    if (!value.trim()) {
      this.setData({
        goods: [],
        isFocus: false
      })
      // 值不合法
      return;
    }
    // 3 准备发送请求获取数据
    // this.setData({
    //   isFocus: true
    // })
    // clearTimeout(this.TimeId);
    // this.TimeId = setTimeout(() => {
    //   this.qsearch(value);
    // }, 1000);
  },
  // 发送请求获取搜索建议 数据
  // async qsearch(query){
  //   const res=await request({url:"/goods/qsearch",data:{query}});
  //   console.log(res);
  //   this.setData({
  //     goods:res
  //   })
  // },
  // 搜索框结束

  // tab切换开始
  tabFun: function (e) {
    console.log(e);
    //获取触发事件组件的dataset属性 
    var _datasetId = e.target.dataset.id;
    console.log("----" + _datasetId + "----");
    var _obj = {};
    _obj.curHdIndex = _datasetId;
    _obj.curBdIndex = _datasetId;
    this.setData({
      tabArr: _obj
    });
  },
  // tab切换结束


  //  卸载
  deleteClick: function (event) {
    console.log(event);
  }
})