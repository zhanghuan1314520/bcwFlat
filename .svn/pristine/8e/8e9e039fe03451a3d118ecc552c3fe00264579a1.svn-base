import { request } from "../../request/index.js";
import regeneratorRuntime from '../../lib/runtime/runtime';
Page({

  /**
   * 页面的初始数据
   */
  data: {
    active: 0,
    checked: false,
    shows: false,
    // 系统应用
    lists: [],
    //第三方应用
    Tripartite:[],
    //时间段选择
    arrayIndex: 0,
    time: '00:00-00:00'
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
   this.getlists();
   this.getTripartite();
  },
//获取系统应用列表
getlists(){
  request({ url: "/tabletApp/queryTabletAppListByMac?mac=88:BF:E4:48:57:8F&type=1" })
  .then(result => {
    console.log("系统应用的数据",result);
    this.setData({
      lists: result.data
    })
  })
},
//获取第三方应用列表
getTripartite(){
  request({ url: "/tabletApp/queryTabletAppListByMac?mac=88:BF:E4:48:57:8F&type=1" })
  .then(result => {
    console.log("第三方应用的数据",result);
    this.setData({
      Tripartite: result.data
    })
  })
},
  //系统应用开关部分
  onChange1({ detail }) {
    var that = this;
    console.log(detail)
    // 需要手动对 checked 状态进行更新
    this.setData({ checked: detail });
    setTimeout(() => {
      wx.showToast({
        title: '设置成功',
        icon: "none",
        duration: 2000,
        success: function () { },
        fail: function () { }
      })
    }, 1000)
  },
  //时间段选择
  bindTimeChange: function (e) {
    this.setData({
      time: e.detail.value
    })
  },
  // 第三方应用开关控制部分
  switch1Change: function (e) {
    this.setData({
      shows: e.detail.value
