// pages/author/children_details/index.js
Page({
  /**
   * 页面的初始数据
   */
  data: {
    list: [],
    mac_array: [],
    // isOnline: 1
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this;
    var phone = wx.getStorageSync('phone');
    wx.request({
      url: 'https://pswanmor.edu505.com/api/device/queryRSDeviceByPhone?phone=' + phone,
      success: (res) => {
        console.log("+++++++++++++++++++++++++",res.data)
        this.setData({
          list: res.data.data,
          isOnline: 1
        })
        for (var i = 0; i < res.data.data.length; i++) {
          that.data.mac_array.push(res.data.data[i].mac)
        }
      }
    })
  },
//解除绑定
  relieve: function (e) {
    var that = this;
    var phone = wx.getStorageSync('phone');
    wx.showModal({
      title: '温馨提示',
      content: '解除绑定后:学习平板自动删除不错家长管控系统所有操作，请慎重操作！',
      success: function (res) {
        if (res.cancel) {

        } else {
          //获取列表下标
          let eid = e.currentTarget.dataset.id
          console.log("eid,", eid)
          var mac_item = that.data.mac_array[eid];
          wx.request({
            url: 'https://pswanmor.edu505.com/api/device/unBindDevice',
            data: {
              mac: mac_item,
              phone: phone
            },
            method: "POST",
            success: function (res) {
              console.log("mac=======", mac_item)
              console.log("phone=======", phone)
              that.onLoad();
              wx.showToast({
                title: '删除成功',
                icon: "none"
              })
              //重新查询接口
              that.data.mac_array.splice(eid, 1);
              wx.request({
                url: 'https://pswanmor.edu505.com/api/device/queryChildList?phone=' + phone,
                success: (res) => {
                  for (var i = 0; i < res.data.data.length; i++) {
                    var item = 'list[' + i + ']'
                    that.setData({
                      [item]: res.data.data.mac
                    })
                  }
                }
              })
            }
          })
        }
      },
      fail: function (res) { },
      complete: function (res) { },
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }

})
