page {
  width: 100%;
  height: 100%;
}
.container {
  background: url('https://i.loli.net/2020/09/11/mXQ9jzARrN8JKdY.jpg');
  background-size: 400vw 100vh;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
}
/* 内容部分开始 */
.content{
  background-color: #fff;
  border-radius: 10rpx;
  position: fixed;
  top: 400rpx;
  width: 650rpx;
  margin: 0 30rpx;
  padding: 20rpx;
}
.top{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  text-align: center;
 }
 .tab1{
   padding: 10rpx;
   color: #999;
   font-size: 30rpx;
   padding: 15rpx 10rpx;
 }
 .tab2{
   margin-left: 20rpx;
  padding: 15rpx 10rpx;
  color: #999;
  font-size: 30rpx;
}
 .top .active{
  color:#000;
  font-weight: bold;
  font-size: 35rpx;
 }
 .log{
   padding: 20rpx;
 }
 .reg{
   padding: 20rpx;
 }
 .img{
   width: 30rpx;
   height: 30rpx;
 }
 .content_form{
   display: flex;
   padding: 15rpx 0;
 }
 .content_form_one{
   flex: 1;
   padding: 6rpx 0;
 }
 .content_form_two{
  flex: 10;
  font-size: 25rpx;
}
/* 内容部分结束*/
/* 登录按钮开始 */
.btn{
  margin-top: 50rpx;
  padding: 20rpx 50rpx;
  border-top: 1px solid #ccc;
  border-bottom:  1px solid #ccc;
}
.btn1{
  margin-top: 50rpx;
  padding: 20rpx 50rpx;
}

/* 登录按钮结束 */
/* footer部分开始 */
.footer{
  display: flex;
 margin-top: 20rpx;
}
.footer_right{
  display: flex;
  flex: 1;
  font-size: 20rpx;
  align-self: center;
}
.footer_left{
  flex: 1;
  font-size: 23rpx;
  align-self: center;
  text-align: right;
}
.tongyi{
  padding: 10rpx 0;
}
/*复选框外框样式*/
checkbox .wx-checkbox-input {
  width: 25rpx;
  height: 25rpx;
  border: 1rpx solid #999;
  border-radius: 100%;
}
/*复选框选中后内部样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 100%;
  height: 100%;
  background: #4268EF;
  border-radius: 100%;
  content: '';
  transform: translate(-50%, -50%) scale(0.1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.footer_checbox{
  padding: 10rpx 0;
}
/* footer部分结束 */

/* 验证码开始 */
.mod{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.t-name{
  background-color: rgb(254,254,254);
  box-sizing: border-box;
  flex: 10;
  font-size: 25rpx;
}
.logbook {
  font-size: 24rpx;
  width: 150rpx;
  text-align: right;
  font-weight: bold;
}

.getkey {
  width: 200rpx;
  position: absolute;
  right: 0rpx;
  text-align: center;
  color: #377FF6;
  font-size: 24rpx;
  border-left: 1px solid #f0f0f0;
}
/* 验证码结束 */
 