.content {
  padding: 0 255rpx;
  background-color: #4268EF;
}

.nav {
  background-color: rgb(118, 160, 238);
  padding: 6rpx 0;
  border-radius: 30rpx;
  border: 1px solid #fff;
  font-size: 28rpx;
}

.time {
  display: flex;
  overflow: hidden;
}

.img {
  width: 30rpx;
  height: 30rpx;
}

.time_one {
  flex: 2;
  text-align: right;
  align-self: center;
}

.time_two {
  flex: 1;
padding: 2rpx 0 2rpx 10rpx;
}

.times {
  padding: 20rpx 0;
  color: #fff;
  text-align: center;
  font-size: 23rpx;
  background-color:#4268EF;
}
.times_tip{
  display: flex;
 padding: 20rpx 270rpx;
}
/* .times_hour{
  flex: 1;
  text-align: right;
}
.times_minute{
  flex: 1;
  text-align: left;
} */

.chart{
  display: flex;
  flex-direction: row;
  padding: 50rpx 20rpx;
  background-color:#4268EF;
}
.footer{
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.top{
  display: flex;
  flex-direction: row;
 }
 .tab1{
   width: 200rpx;
   padding: 10rpx;
   color: #999;
   font-size: 28rpx;
   padding: 15rpx 10rpx;
   border: 1px solid #ccc;
   border-radius: 30rpx;
 }
 .tab2{
  width: 200rpx;
  padding: 10rpx;
  color: #999;
  font-size: 28rpx;
  padding: 15rpx 10rpx;
  border: 1px solid #ccc;
  border-radius: 30rpx;
  margin-left: 10rpx;
}
 .top{
  padding: 20rpx;
  text-align: center;
 }
 .top .active{
  color:#fff;
  background-color: #4268EF;
  border: 1px solid #4268EF;
 }
 .record{
   padding: 20rpx;
 }
 .statistics{
   padding: 20rpx;
 }

 .table {
  border: 0px solid darkgray;
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
  font-size: 20rpx;
 }
 .td {
  width:40%;
  justify-content: center;
  text-align: center;
 }
 .bg-w{
  background: snow;
 }
 /* .bg-g{
  background: #E6F3F9;
 } */
 .th {
  width: 40%;
  justify-content: center;
  background: #ccc;
  color: #333;
  display: flex;
  height: 2rem;
  align-items: center;
  font-size: 25rpx;
  font-weight:bold;
 }