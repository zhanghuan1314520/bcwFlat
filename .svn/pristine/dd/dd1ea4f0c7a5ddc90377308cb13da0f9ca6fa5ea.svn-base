/* pages/author/change_password/index.wxss */
.container {
  background: -webkit-linear-gradient(top,#804CF7,#804CF7,#DEE0FE);
  width: 100%;
  height: 100%;
  padding-top: 50rpx;
}
.content {
  position: relative;
  margin: 0 28rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.item {
  display: flex;
  padding: 30rpx;
  font-size: 32rpx;
  color: #1F1F1F;
  font-weight: bold;
  border-bottom: 1px solid #dcdcdd;
}

.item_right {
  flex: 2;
  align-self: center;
  padding: 23rpx 0;
}

.item_left {
  flex: 5;
  align-self: center;
  font-size: 30rpx;
}

