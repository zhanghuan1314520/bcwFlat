// pages/login/index.js
Page({

  /**
   * 页面的初始数据
   */
  data: {
    login: true,  //登录注册切换
    phonenumber: "",  //手机号
    password: "", //密码
    passwordack: "",//确认密码
    login_phone: "",
    login_password: ""
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    wx.getStorage({
      key: 'login_phone',
      success: function(res) {
        that.setData({ login_phone: res.data })
      },
    })
    wx.getStorage({
      key: 'login_password',
      success: function (res) {
        that.setData({ login_password: res.data })
      },
    })
  },

  // 注册
  regist: function (e) {
    var that = this;
    var myreg = /^(((13[0-9]{1})|(15[0-9]{1})|(18[0-9]{1})|(17[0-9]{1}))+\d{8})$/
    if (that.data.phonenumber == '') {
      wx.showToast({
        title: '请输入手机号!',
        icon: "none",
        duration: 2000
      })
    } else if (that.data.phonenumber.length != 11) {
      wx.showToast({
        title: '手机号不正确，请重新输入!',
        icon: "none",
        duration: 2000
      })
    } else if (!myreg.test(that.data.phonenumber)) {
      wx.showToast({
        title: '请输入正确的手机号!',
        icon: "none",
        duration: 2000
      })
    }
    else if (that.data.password == '') {
      wx.showToast({
        title: '请输入密码!',
        icon: "none",
        duration: 2000
      })
    } else if (that.data.passwordack == '') {
      wx.showToast({
        title: '请再次输入密码',
        icon: "none",
        duration: 2000
      })
    } else if (that.data.password != that.data.passwordack) {
      wx.showToast({
        title: '两次密码输入不一致，请重新输入！',
        icon: "none",
        duration: 2000
      })
    }
    else {
  //服务器代码
      wx.request({
        // url: 'https://1z74t80660.51mypc.cn/bcapi/api/ipad/padManageUserParent/register?localPhone=' + that.data.phonenumber + "&password=" + that.data.password + "&passwordAgain=" + that.data.passwordack,
        url: 'http://wx.bucuonet.com/bcapi/api/ipad/padManageUserParent/register?localPhone=' + that.data.phonenumber + "&password=" + that.data.password + "&passwordAgain=" + that.data.passwordack,
        method: "POST",
        header: {
          "content-type": "applicon/json"
        },
        success: function (res) {
          console.log("数据", res.data)
          // 判断code的情况
          if (res.data.code == 101) {
            wx.showToast({
              title: '该账号不存在!',
              icon: "none",
              duration: 2000
            })
          } else if (res.data.code == 1603) {
            wx.showToast({
              title: '手机号错误!',
              icon: "none",
              duration: 2000
            })
          } else if (res.data.code == 1308) {
            wx.showToast({
              title: '两次密码输入不一致，请重新输入！',
              icon: "none",
              duration: 2000
            })
          }
          else if (res.data.code == 1204) {
            wx.showToast({
              title: '该号码已注册,请登录!',
              icon: "none",
              duration: 2000
            })
          } else if (res.data.code == 0) {
            wx.showToast({
              title: '注册成功!',
              icon: "none",
              duration: 2000
            })
          }
        },
        fail: function (res) {
          wx.showToast({
            title: '网络不在状态!',
            icon: "none",
            duration: 2000
          })
        }
      })
    }
  },
  //登录
  logins: function (e) {
    var that = this;
    var myreg = /^(((13[0-9]{1})|(15[0-9]{1})|(18[0-9]{1})|(17[0-9]{1}))+\d{8})$/
    //表单数据
    var objData = e.detail.value;
    if (objData.login_phone && objData.login_password){
      //异步方式储存表单数据
      wx.setStorage({
        key: 'login_phone',
        data: objData.login_phone,
      })
      wx.setStorage({
        key: 'login_password',
        data: objData.login_password,
      })
    }

    if (that.data.login_phone == '') {
      wx.showToast({
        title: '请输入手机号！',
        icon: "none",
        duration: 2000
      })
    } else if (that.data.login_phone.length != 11) {
      wx.showToast({
        title: '手机号有误，请重新输入!',
        icon: "none",
        duration: 2000
      })
    } else if (!myreg.test(that.data.login_phone)) {
      wx.showToast({
        title: '请输入正确的手机号！',
        icon: "none",
        duration: 2000
      })
    }
    else if (that.data.login_password == '') {
      wx.showToast({
        title: '请输入密码!',
        icon: "none",
        duration: 2000
      })
      //   判断是同意开始
    } else if (that.data.if_rem_user == undefined) {
      that.data.if_rem_user = false;
      wx.showToast({
        title: '请阅读并同意勾选下方协议!',
        icon: "none",
        duration: 2000
      })
    } else if (that.data.if_rem_user == false) {
      wx.showToast({
        title: '请阅读并同意勾选下方协议!',
        icon: "none",
        duration: 2000
      })
    }
    //   判断是同意结束
    else {
      wx.request({
        url: 'http://wx.bucuonet.com/bcapi/api/ipad/padManageUserParent/login?localPhone=' + that.data.login_phone + "&password=" + that.data.login_password,
        method: "POST",
        header: { "content-type": "applicon/json" },
        success: function (res) {
          // 判断code的情况
          if (res.data.code == 101) {
            wx.showToast({
              title: '手机号不能为空!',
              icon: "none",
              duration: 2000
            })
          } else if (res.data.code == 1603) {
            wx.showToast({
              title: '手机号错误!',
              icon: "none",
              duration: 2000
            })
          } else if (res.data.code == 1101) {
            wx.showToast({
              title: '账号或密码不正确!',
              icon: "none",
              duration: 2000
            })
          } else if (res.data.code == 0) {
            // console.log("----------",res.data)
            // console.log("phone--------------",res.data.data.user.phone)
            // console.log("localPhone-------------",res.data.data.user.localPhone)
            wx.setStorageSync('phone', res.data.data.user.phone);
            wx.setStorageSync('localPhone', res.data.data.user.localPhone);
            // console.log("phone--------------",wx.getStorageSync('phone'))
            // console.log("localPhone-------------",wx.getStorageSync('localPhone'))
            wx.showToast({
              title: "登录成功！",
              icon: "none",
              duration: 2000,
              success() {
                setTimeout(() => {
                  wx.switchTab({
                    url: '/pages/index/index',
                  })
                }, 2000)
              }
            })
          }
        },
        fail: function (res) {
          wx.showToast({
            title: '网络不在状态!',
            icon: "none",
            duration: 2000
          })
        }
      })
    }
  },
  //注册
  phonenumberInput: function (e) {
    this.data.phonenumber = e.detail.value
  },
  passwordInput: function (e) {
    this.data.password = e.detail.value
  },
  passwordInputAck: function (e) {
    this.data.passwordack = e.detail.value
  },
  //登录
  phoneInput: function (e) {
    this.data.login_phone = e.detail.value
  },
  pswInput: function (e) {
    this.data.login_password = e.detail.value
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
     
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },
  //切换
  login: function () {
    this.setData({
      login: true
    });
  },
  register: function () {
    this.setData({
      login: false
    });
  },
  forget: function () {
    wx.navigateTo({
      url: '/pages/forget_password/index',
    })
  },
  service_agreement: function () {
    wx.navigateTo({
      url: '/pages/service_agreement/index',
    })
  },
  // checkbox是否选中
  niming: function (e) {
    // console.log("判断是否选中", e)
    var flag = e.detail.value[0];
    if (flag === undefined) {
      flag = false;
    } else {
      flag = true;
    }
    this.setData({
      if_rem_user: flag,
    })
  }
})
