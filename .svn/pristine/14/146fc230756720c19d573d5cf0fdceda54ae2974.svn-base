<view class="content">
  <!-- 娱乐类内容时长限制开始 -->
  <view class="nav">
    <view class="nav_top">
      <view class="top_list">
        <view class="top_title">娱乐类内容时长限制</view>
        <view class="top_btn">
          <van-switch checked="{{ checked }}" size="28px" bind:change="onChange" active-color="#377FF6"
            inactive-color="#8A98A2" />
        </view>
      </view>
      <view class="tip">设置的时长为平板每天娱乐类应用的可用总时长</view>
    </view>
    <view class="nav_button">
      <view class="name">每日娱乐可用时长</view>
      <view class="time">
        <view class="time_one">
          <view>
            <view class="section">
              <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                <view class="picker">
                  {{array[index]}}
                </view>
              </picker>
            </view>
          </view>
        </view>
        <view class="time_two">
          <image class="img" src="../../images/jt.png" />
        </view>
      </view>
    </view>
  </view>
  <!-- 娱乐类内容时长限制结束 -->
  <!-- 整机锁定时段设置开始 -->
  <view class="nav">
    <view class="nav_top">
      <view class="top_list">
        <view class="top_title">整机锁定时段设置</view>
        <view class="top_btn">
          <van-switch checked="{{ checked1 }}" size="28px" bind:change="onChange1" active-color="#377FF6"
            inactive-color="#8A98A2" />
        </view>
      </view>
      <view class="tip">平板在设置的时间段内不能使用,平板处于锁屏状态</view>
    </view>
    <view class="nav_button">
      <view class="name">每日锁定时间段</view>
      <view class="time">
        <view class="time_one">
          <view>
            <view class="section">
              <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange" name="time">
                <view class="picker">
                  {{time}}
                </view>
              </picker>
            </view>
          </view>
        </view>
        <view class="time_two">
          <image class="img" src="../../images/jt.png" />
        </view>
      </view>
    </view>
  </view>
  <!--整机锁定时段设置结束 -->
</view>

