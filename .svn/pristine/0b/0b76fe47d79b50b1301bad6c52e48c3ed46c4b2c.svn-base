// pages/home/index.js
var app = getApp();
Page({

  /**
   * 页面的初始数据
   */
  data: {
    index: 0,
    checked: false,
    banners: [{
      id:0,
      img: "../../images/img1.jpg"
    }, {
      id:1,
      img: "../../images/img2.jpg"
    }, {
      id:2,
      img: "../../images/img3.jpg"
    }],
    indicatorDots: true,
    vertical: false,
    autoplay: true,
    circular: true,
    interval: 2000,
    duration: 500,
    shows:false
    },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    console.log(options);
    var that = this;
    var mac = app.globalData.mac
    wx.request({
      // url: 'https://pswanmor.edu505.com/api/deviceConfig/queryDeviceConfig?mac='+app.globalData.mac,
      url: 'https://pswanmor.edu505.com/api/deviceConfig/queryDeviceConfig?mac=88:BF:E4:48:57:8F',
      success: (result) => {
        console.log("查询一键锁屏状态", result.data);
      }
    })

    wx.request({
      // url: 'https://pswanmor.edu505.com/api/deviceConfig/updateLockStatus?mac='+app.globalData.mac+"&lockStatus="+0,
      url: 'https://pswanmor.edu505.com/api/deviceConfig/updateLockStatus',
      method:"POST",
       data:{lockStatus:0,mac:"88:BF:E4:48:57:8F"},
      success: (result)=> {
        console.log("修改锁屏状态", result.data);
      }
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
  },

  switch1Change:function(e){
    console.log(e.detail.value)
    this.setData({
      shows:e.detail.value
    });
  },




  //跳转
  //日志
  journal: function () {
    wx.navigateTo({
      url: '/pages/journal/index',
    })
  },
  // 时间
  time: function () {
    wx.navigateTo({
      url: '/pages/time/index',
    })
  },
  // 浏览器
  browser: function () {
    wx.navigateTo({
      url: '/pages/browser/index',
    })
  },
  //定位
  location: function () {
    wx.navigateTo({
      url: '/pages/location/index',
    })
  },
  //查看
  inspect: function () {
    wx.navigateTo({
      url: '/pages/inspect/index',
    })
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    var code = app.globalData.code
    console.log("这是传过来手机号为:", code)
    if(code != null){
      wx.request({
        url: 'https://pswanmor.edu505.com/api/device/queryChildList?phone=' + code,
        success: res => {
          console.log(res.data.data[0].mac);
           app.globalData.mac = res.data.data[0].mac
          
        }
      })
    }
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})