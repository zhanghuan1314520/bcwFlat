// pages/application/index.js
import { request } from "../../request/index.js";
var searchValue = '';
var app = getApp();

Page({

  /**
   * 页面的初始数据
   */
  data: {
    learn: [],  //查询类别下拉列表内容部分
    selected: 0,   //tab是否选中
    list: [], // 查询类别下拉列表
    //搜索框
    centent_Show: true,
    searchValue: '',
    categoryId: "",
    pushStatus: 0
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this;
    var mac = app.globalData.mac;
    this.getlearn();
    console.log("-------", mac)
    wx.request({
      url: 'https://pswanmor.edu505.com/api/appCategory/select',
      success: function (res) {
        console.log("查询类别下拉列表", res.data.data)
        //循环使用
        for (var i = 0; i < res.data.data.length; i++) {
          var item = 'list[' + i + ']'
          console.log(item)
          console.log(item,i)
            //找到需要删除的数组，从第三个开始删，删1个
        //  this.res.data.data.splice(3, 1);
          that.setData({
            [item]: res.data.data[i].label	//注意：这里item必须要加[]
          })
        }
      }
    })

  },
  getlearn() {
    request({ url: "/appDevice/queryMyAppDevice", data: { categoryId: this.categoryId, mac: app.globalData.mac, pushStatus: this.data.pushStatus, searchType: 1 }, method: "POST" })
      .then(result => {
        // pushStatus (integer): 状态(0:全部,1:已推送,2:已安装,3:待卸载(卸载中),4:已卸载) ,
        // 不显示按钮   1:已推送, 卸载中,已推送,
        //显示按钮    从平板卸载   2:已安装
        //显示按钮    推送至平板    3  待推送   4:已卸载
        console.log("result-->", result)
        for (var i = 0; i < result.data.length; ++i) {
          if (result.data[i].pushStatus == 1) {
            result.data[i].pushStatus = "已推送";
          }
          if (result.data[i].pushStatus == 2) {
            result.data[i].pushStatus = "已安装";
          }
          if (result.data[i].pushStatus == 3) {
            result.data[i].pushStatus = "待推送 ";
          }
          if (result.data[i].pushStatus == 4) {
            result.data[i].pushStatus = "已卸载";
          }
        }

        console.log(result)
        console.log("学习列表详情数据", result.data);
        this.setData({
          learn: result.data
        })
      })
  },
  //从平板卸载或者推送至平板部分逻辑开始
  control: function (event) {
    console.log("------",event)
    let id= event.currentTarget.dataset.id
    this.data.learn.splice(id, 1)
    var that = this;
    var resultCode = 1;
    //判断平板卸载或者推送至平板的状态
    if (resultCode == 1) {
      wx.showModal({
        title: '温馨提示',
        content: '确定把学霸一对一从平板推送吗？',
        success(res) {
          if (res.confirm) {
            wx.request({
              // 推送api
              url: 'https://pswanmor.edu505.com/api/appDevice/push',
              data: {
                appId: 259, mac: "20:75:55:39:01:42"
              },
              method: 'POST',
              success: function (res) {
                console.log("推送的内容", res.data);
              }
            })
            wx.showToast({
              title: '推送成功',
              icon: "none",
              duration: 2000,
              mask: true,
            })
          } else if (res.cancel) {
          }
        }
      })
    } else if (resultCode == 2) {
      wx.showModal({
        title: '温馨提示',
        content: '确定把学霸一对一从平板卸载吗？',
        success(res) {
          if (res.confirm) {
            wx.request({
              //卸载api
              url: 'https://pswanmor.edu505.com/api/appDevice/uninstall',
              data: {
                appId: 259, mac: "20:75:55:39:01:42"
              },
              method: 'POST',
              success: function (res) {
                console.log("卸载的内容", res.data);
              }
            })
            wx.showToast({
              title: '卸载成功',
              icon: "none",
              duration: 2000,
              mask: true,
            })
          } else if (res.cancel) {
          }
        }
      })
    }
  },
  //从平板卸载或者推送至平板部分逻辑结束
  suo: function (e) {
    console.log("搜索按钮的值", e);
    console.log(e.currentTarget.dataset)
    var id = e.currentTarget.dataset.id
  },
  // 搜索框结束
  //tab框开始
  selected: function (e) {
    console.log("tab的值为:", e.currentTarget.dataset)
    let that = this
    let index = e.currentTarget.dataset.index
    console.log("选中内容的下标值为:", e.currentTarget.dataset.index)
    if (index == 0) {
      that.setData({
        selected: 0
      })
    } else if (index == 1) {
      that.setData({
        selected: 1
      })
    } else if (index == 2) {
      that.setData({
        selected: 2
      })
    } else {
      that.setData({
        selected: 3
      })

      that.categoryId = index;
      that.getlearn();
    }
  },
  //tab框结束
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },
})