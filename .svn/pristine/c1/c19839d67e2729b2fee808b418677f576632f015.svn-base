page {
  width: 100%;
  height: 100%;
}

/* 背景容器 */
.container {
  background: url('https://i.loli.net/2020/09/11/mXQ9jzARrN8JKdY.jpg');
  background-size: 400vw 100vh;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
}

/* 内容部分开始 */
.content {
  width: 600rpx;
  background-color: rgb(236, 212, 212);
  border-radius: 20rpx;
  position: fixed;
  margin: 80rpx 75rpx 76rpx 75rpx;
}

.content_image {
  margin: 40rpx 220rpx 20rpx 220rpx;
}

.content_title {
  text-align: center;
  font-size: 38rpx;
  color:#fff;
  font-weight: bold;
}

.content_img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}

.top {
  width: 368rpx;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  background-color: #fff;
  margin: 70rpx 116rpx 40rpx 116rpx;
  border-radius: 36rpx;
  font-size: 40rpx;
  color: #BB87FE;
  font-weight: bold;
}

/* 登录/注册切换 */
.tab1 {
  width: 184rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  text-align: center;
}

.tab2 {
  width: 184rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  text-align: center;
  align-self: center;
}

.top .active {
  color: #fff;
  background-color: #B54EF0;
}


/* 注册部分 */
.reg {
 margin-bottom: 40rpx;
}

.content_form_two1 {
  flex: 10;
  display: flex;
  font-size: 25rpx;
}

/* 验证码开始 */
.content_form_two_right {
  flex: 1;
  padding-top: 10rpx;
  color: #333;
}

.content_form_two_left {
  flex: 2;
  text-align: center;
  align-self: center;
  font-size: 25rpx;
}

.button1 {
  width: 200rpx;
  height: 72rpx;
  font-size: 28rpx;
  background: #C291FF;
  color: #FFFFFF;
  border: 1px solid #C291FF;
}

.content_form_one1 {
  flex: 1;
  padding-top: 15rpx;
  margin-left: 35rpx;
}

/* 图标尺寸 */
.img {
  width: 25rpx;
  height: 30rpx;
}

/* 登录注册统一部分 */
.content_form {
  display: flex;
  width: 516rpx;
  height: 76rpx;
  border-radius: 38rpx;
  border: 1px solid #fff;
  margin: 0 42rpx 36rpx 42rpx;
  background-color: #C291FF;
  font-size: 32rpx;
  font-weight:400;
  color: #D27FF4;
}

.content_form_one {
  flex: 1;
  padding: 20rpx 0;
  margin-left: 35rpx;
}

.content_form_two {
  flex: 10;
 padding: 16rpx 0;
  display: flex;
  color: #333;
}

/* 内容部分结束*/

/* footer部分开始 */
.footer {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  margin: 40rpx 42rpx;
  color: #fff;
}

.footer_right {
  display: flex;
  flex: 3;
  align-self: center;
}

.footer_left {
  flex: 1;
  align-self: center;
}

.tongyi {
  flex: 8;
}

/*  重写 checkbox 样式  */
/* 未选中的 背景样式 */
checkbox .wx-checkbox-input {
  border-radius: 50%;
  /* 圆角 */
  width: 25rpx;
  /* 背景的宽 */
  height: 25rpx;
  /* 背景的高 */
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  background: #4268EF;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  /* 圆角 */
  width: 25rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 25rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 25rpx;
  text-align: center;
  font-size: 30rpx;
  /* 对勾大小 30rpx */
  color: #fff;
  /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.footer_checbox {
  flex: 1;
}

/* footer部分结束 */
/* 登录按钮 */
.button {
  width: 516rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  background:#C291FF;
  color: #FFFFFF;
  border-radius: 38rpx;
  text-align: center;
  font-weight: bold;
}